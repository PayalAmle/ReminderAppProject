<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Login"
    android:animateLayoutChanges="true"
    android:background="@drawable/img1">
    <RelativeLayout
        android:id="@+id/rly"
        android:background="@drawable/tech1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">
        <TextView
            android:id="@+id/tv_logintech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:text="LOGIN"
            android:textSize="30sp"
            android:textColor="@color/golden"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_below="@+id/tv_logintech">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_techemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email_Id"
                    android:textAllCaps="true"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/golden"
                    />
                <EditText
                    android:id="@+id/techemet1"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_email"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/et_bg"
                    android:hint="Email_id"
                    android:textColorHint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/techline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_logintech"
            android:layout_marginTop="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/techpass1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textAllCaps="true"
                    android:fontFamily="cursive"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/golden"
                    />
                <EditText
                    android:id="@+id/techpassi2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:hint="Password"
                    android:drawableLeft="@drawable/ic_action_password"
                    android:textColor="@color/white"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    android:textColorHint="@color/white"
                    android:background="@drawable/et_bg"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/techbtln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techline1"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_bg"
            android:text="Login Now"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textColor="@color/golden"
            android:paddingRight="70dp"
            android:paddingLeft="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>